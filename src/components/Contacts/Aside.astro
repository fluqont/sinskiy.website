---
const version = "v1.1"
const notLinksText = ["Design & Code by me", version];
const linksText = ["GitHub repo", "Attribution"]
const links =
[
    "https://github.com/Sinskiy/sinskiy.github.io",
    "https://github.com/Sinskiy/sinskiy.github.io/README.md"
];
---

<aside class="flex column">
    {
        notLinksText.map((text) =>
            <h4>{text}</h4>
        )
    }
    {
        linksText.map((text) =>
            <a href={links[linksText.indexOf(text)]} target="_blank">
                <h4>{text}</h4>
            </a>
        )
    }
</aside>
<style>
    aside {
        gap: 2rem;
    }
    aside > a, aside > h4 {
        position: relative;
        z-index: 20;
    }
    a > h4 {
        text-decoration: underline;
        color: rgb(146, 180, 201);
    }

    a:visited > h4 {
        color: rgb(140, 131, 202);
    }

    a > h4:hover {
        text-decoration: none;
    }

    h4 {
        text-align: right;
        margin: 0;
    }

    @media (max-width: 1444px) {
        aside {
            margin-top: 2rem;
            justify-content: center;
            flex-direction: row!important;
        }
    }

    @media (max-width: 700px) {
        aside {
            flex-wrap: wrap;
            justify-content: space-between;
        }

        aside > h4 {
            display: none;
        }
    }

</style>