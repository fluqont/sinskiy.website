<header>
    <a href="#top">
        <img src="logo.svg" alt="Go to home" id="logo" aria-label="Go to home page of this website" title="Go to home page of this website">
    </a>
    <nav>
        <a href="#top" class="link" aria-label="Go to home page of this website" title="Go to home page of this website">Home</a>
        <a href="#projects" class="link" aria-label="Go to my projects" title="Go to my projects">Projects</a>
        <a href="#about" class="link" aria-label="Go to section with infomation about me" title="Go to section with information about me">About</a>
        <a href="#contacts" class="link"  aria-label="Go to section my contacts" title="Go to section with my contacts">Contacts</a>
    </nav>
</header>

<style>
    header {
        top: 2rem;
        position: sticky; /* with `position: fixed` h2's margin isn't working */
        z-index: 10;

        border-radius: 10rem;

        padding: 1rem 4rem;

        display: inline-flex;
        justify-content: center;
        align-items: center;
        gap: 4rem;
    }

    nav {
        display: flex;
        gap: 2rem;
    }

    a.on-top {
        color: white;
    }
    a.on-top:hover {
        color: var(--green)
    }

    /* media */
    @media (max-width: 700px) {
    header {
        gap: 2.5rem;
        padding: 1rem 1rem;
    }
    header > nav {
        gap: 1.5rem;
    }

    @media (max-width: 600px) {
        #logo {
            max-width: 2.5rem;
            max-height: auto;
        }
    }

    @media (max-width: 370px) {
        nav {
            display: none;
        }
    }
}
</style>
<script>
    const headerStyle = document.querySelector("header").style;

    function removeHeaderBg() {
        if (scrollY < 150) {
            headerStyle.background = "none";
            headerStyle.backdropFilter = "none";
        }
        else {
            headerStyle.transition = "background 0.3s";
            headerStyle.background = "var(--white-transparent)";
            headerStyle.backdropFilter = "blur(16px)";
        }
    }

    removeHeaderBg();
    document.addEventListener("scroll", removeHeaderBg);

</script>