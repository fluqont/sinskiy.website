---
import ProjectLink from "./ui/ProjectLink.astro"
import ProjectPreview from "./ui/ProjectPreview.astro"
import Tag from "./ui/Tag.astro"

const { project } = Astro.props
---
<article class="flex flex-col md:flex-row gap-8 md:gap-16">
  <ProjectPreview name={project.data.name} url={project.data.url} />
  <div class="flex flex-col gap-2 md:gap-8 md:w-[calc(50%-4rem)]">
    <header class="flex flex-col">
      <h3 class="text-focus-stealer capitalize">{project.data.name}</h3>
      <div class="gap-2 hidden md:flex">
        {project.data.tags.map((tag: string) =>
          <Tag type={tag} />
        )}
      </div>
    </header>
    <p class="text-basic">
      {project.body}
    </p>
    <nav class="flex gap-4 flex-wrap">
      <ProjectLink url={project.data.url} image="/link.svg" alt="link icon" />
      {project.data.github && <ProjectLink url={`github.com/Sinskiy/${project.data.github}`} image="/github--blue.svg" alt="github icon" />}
    </nav>
  </div>
</article>
