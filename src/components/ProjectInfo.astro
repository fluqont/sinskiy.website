---
import type { CollectionEntry } from "astro:content";
import GitHub from "./icons/GitHub.astro";
import Link from "./icons/Link.astro";
import { render } from "astro:content";

interface Props extends CollectionEntry<"projects"> {}

const project = Astro.props;
const { data } = project;
const { Content } = await render(project);
---

<div class="info">
  <div class="header">
    <h3>{data.title}</h3>
    <ul role="list" class="tags">
      {data.tags.map((tag) => <li class:list={[tag, "tag"]}>{tag}</li>)}
    </ul>
  </div>
  <div class="text"><Content /></div>
  <nav class="links">
    <a
      href={data.href}
      aria-label={`visit ${data.title} (${data.href}) demo`}
      class="link"
    >
      <Link />
      {data.href.replace("https://", "")}
    </a>
    <a
      href={data.github}
      aria-label={`visit ${data.title} source code (${data.github})`}
      class="link"
    >
      <GitHub size={20} />
      {data.github.replace("https://github.com/", "")}
    </a>
  </nav>
</div>

<style>
  .info {
    flex: 2;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .header {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  h3 {
    font-size: 2rem;
    font-weight: 600;
  }
  @media (max-width: 400px) {
    h3 {
      font-size: 1.5rem;
    }
  }

  .tags {
    display: flex;
    gap: 0.25rem;
    flex-wrap: wrap;
    font-family: var(--monospace);
  }

  .tag {
    width: fit-content;
    padding: 0.25rem 1rem;
    background-color: rgb(var(--surface));
    border-radius: var(--rounded-full);
    font-weight: 500;
    font-size: 0.875rem;
  }

  .Astro {
    background-image: linear-gradient(
      to top right,
      rgb(19, 33, 172),
      rgb(136, 26, 189)
    );
    color: white;
  }
  .Tailwind {
    background-color: #38bdf8;
    color: black;
  }
  .React {
    background-color: rgb(88 196 220);
    color: rgb(64 71 86);
  }
  .React.Query {
    background-image: linear-gradient(to right, #ef4444, #f59e0b);
    color: white;
  }
  .Strapi {
    background-color: #4945ff;
    color: white;
  }
  .React.Router {
    background-color: #ff707c;
    color: black;
  }
  .PostgreSQL {
    background-color: #699eca;
    color: black;
  }

  .links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .link {
    display: flex;
    gap: 0.25rem;
  }
</style>
