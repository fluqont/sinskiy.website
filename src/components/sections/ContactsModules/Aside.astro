---
import { Image } from "astro:assets";

const version = "1.7";
const notLinksText = ["Design & Code by me", version];
const linksText = ["GitHub repo", "Attribution"];
const links = [
  "https://github.com/Sinskiy/sinskiy.github.io",
  "https://github.com/Sinskiy/sinskiy.github.io/blob/main/README.md",
];
---

<aside class="column flex">
  {notLinksText.map((text) => <h4>{text}</h4>)}
  {
    linksText.map((text) => (
      <a href={links[linksText.indexOf(text)]} target="_blank">
        <h4>{text}</h4>
      </a>
    ))
  }
  <a class="astroBadge justifyCenter flex" href="https://astro.build">
    <Image
      loading="eager"
      src="https://astro.badg.es/v2/built-with-astro/medium.svg"
      alt="Built with Astro"
      width="240"
      height="40"
    />
  </a>
</aside>
<style>
  aside {
    gap: 2rem;
  }
  aside > a,
  aside > h4 {
    position: relative;
    z-index: 20;
  }
  a > h4 {
    text-decoration: underline;
    color: #aaccff;
  }

  a > h4:hover {
    text-decoration: none;
  }

  h4 {
    text-align: right;
    margin: 0;
  }

  .astroBadge {
    min-width: 100%;
  }

  @media (max-width: 1444px) {
    aside {
      margin-top: 2rem;
      justify-content: center;
      flex-direction: row !important;
    }
  }

  @media (max-width: 700px) {
    aside {
      flex-wrap: wrap;
      justify-content: space-between;
    }
  }
</style>
