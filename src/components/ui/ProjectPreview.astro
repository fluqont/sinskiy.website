---
const { name, url } = Astro.props;
---

<a
  class="group relative aspect-[5/3] w-full rounded-2xl bg-white/10 transition-transform duration-200 hover:-translate-y-1 hover:before:opacity-100 xl:h-auto xl:w-[calc(50%-4rem)]"
  href={`https://${url}`}
  target="_blank"
>
  <span class="sr-only">Go to {name}</span>
  <div
    class="absolute right-4 top-4 rounded-full bg-white/30 p-2 transition-colors duration-200 group-hover:bg-primary"
  >
    <img src="/arrow-outward.svg" alt="outward arrow icon" />
  </div>
  <div
    class="m-[2px] flex h-[calc(100%-4px)] w-[calc(100%-4px)] items-center justify-center rounded-[inherit] bg-almostBlack/80"
  >
    <img
      src={`/${name.replace(" ", "-")}.svg`}
      alt={`${name} logo`}
      class="h-auto w-[30%] xl:w-[50%]"
    />
  </div>
</a>

<style>
  /* https://codepen.io/Hyperplexed/pen/MWQeYLW */
  a::before {
    background: radial-gradient(
      500px circle at var(--mouse-x) var(--mouse-y),
      rgb(255 255 255 / 0.06),
      transparent 40%
    );
    content: "";
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    opacity: 0;
    position: absolute;
    transition: opacity 200ms;
  }
</style>
